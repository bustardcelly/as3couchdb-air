<?xml version="1.0"?>
<flex-config xmlns="http://www.adobe.com/2006/flex-config">

	<compiler>
    	<external-library-path>
      		<path-element>${playerglobal.lib.dir}</path-element>
      		<path-element>${air.lib.dir}</path-element>
    	</external-library-path>
    	<library-path append="true">
    		<path-element>${lib.dir}</path-element>
    	</library-path>
    	<source-path>
      		<path-element>${src.dir}</path-element>
    	</source-path>
  	</compiler>
  	
  	<include-sources includes="**/*">
    	<path-element>${as3couchdb.src.dir}/com/custardbelly/as3couchdb</path-element>
    	<path-element>${as3couchdb.src.dir}/com/custardbelly/as3couchdb/command</path-element>
    	<path-element>${as3couchdb.src.dir}/com/custardbelly/as3couchdb/core</path-element>
    	<path-element>${as3couchdb.src.dir}/com/custardbelly/as3couchdb/enum</path-element>
    	<path-element>${as3couchdb.src.dir}/com/custardbelly/as3couchdb/event</path-element>
    	<path-element>${as3couchdb.src.dir}/com/custardbelly/as3couchdb/mediator</path-element>
    	<path-element>${as3couchdb.src.dir}/com/custardbelly/as3couchdb/net/</path-element>
    	<path-element>${as3couchdb.src.dir}/com/custardbelly/as3couchdb/responder</path-element>
    	<path-element>${as3couchdb.src.dir}/com/custardbelly/as3couchdb/serialize</path-element>
    	<path-element>${as3couchdb.src.dir}/com/custardbelly/as3couchdb/service</path-element>
    	<path-element>${as3couchdb.src.dir}/com/custardbelly/as3couchdb/util</path-element>
    </include-sources>
  	
  	<include-classes>
    	<class>com.custardbelly.as3couchdb.service.AIRCouchRequest</class>
  	</include-classes>
  	
  	<output>${lib.bin.dir}/${lib.name}.swc</output>
  	
  	<metadata>
    	<creator>Todd Anderson</creator>
    	<description>http://github.com/bustardcelly/as3couchdb-air</description>
    	<language>EN</language>
    	<title>External AS3 Library For CouchDB targeting the Adobe AIR Platform</title>
  	</metadata>
  	
</flex-config>